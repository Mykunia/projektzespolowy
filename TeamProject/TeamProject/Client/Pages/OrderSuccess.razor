@page "/order-success"

@using TeamProject.Client.Services.CartService;
@inject ICartService CartService
@inject NavigationManager NavigationManager

<PageTitle>Thank you!</PageTitle>

<h3>Order placed successfully!</h3>

<span>Thank you for your order. You can view your orders <a href="/orders">here</a>.</span>
<span>Explore more products in our <a href="/products">product catalog</a>.</span>

@code {
    protected override async Task OnInitializedAsync()
    {
        await CartService.GetCountItems();
    }

    private void NavigateToOrders()
    {
        NavigationManager.NavigateTo("/orders");
    }

    private void NavigateToProducts()
    {
        NavigationManager.NavigateTo("/products");
    }
}